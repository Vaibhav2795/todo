{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "plugins": ["@typescript-eslint"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "script"
  },
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  },
  "env": {
    "node": true
  },
  "globals": {
    "exports": "readonly"
  }
}
